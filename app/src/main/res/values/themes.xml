<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DyMovies" parent="Theme.Material3.DynamicColors.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">false</item>
        <item name="android:enforceStatusBarContrast" tools:targetApi="q">false</item>
        <item name="materialCardViewStyle">@style/Widget.Material3.CardView.Filled</item>

        <item name="switchPreferenceCompatStyle">@style/SwitchPreferenceStyle</item>
    </style>

    <style name="Theme.DyMovies" parent="Base.Theme.DyMovies" />

    <!-- 亮色主题 -->
    <style name="Theme.DyMovies.Light" parent="Theme.Material3.DynamicColors.Light.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

    </style>

    <!-- 深色主题 -->
    <style name="Theme.DyMovies.Dark" parent="Theme.Material3.DynamicColors.Dark.NoActionBar" >
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

    </style>

    <style name="BaseDialogStyle" parent="Theme.Material3.DayNight.Dialog">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="isMaterial3DynamicColorApplied">true</item>
    </style>

    <style name="SwitchPreferenceStyle" parent="Preference.SwitchPreferenceCompat.Material">
        <item name="widgetLayout">@layout/layout_switch</item>
    </style>

</resources>